<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tNombre"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#333" />

        <TextView
            android:id="@+id/tDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dip"
            android:layout_marginTop="80dip"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textColor="#333" />

        <TextView
            android:id="@+id/tTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dip"
            android:layout_marginTop="130dip"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textColor="#333" />

        <TextView
            android:id="@+id/tHorario"
            android:layout_width="100dp"
            android:layout_height="43dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textColor="#333" />

        <ImageView
            android:id="@+id/tImgR"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/g836" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="123dp"
            android:layout_height="27dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="170dip"
            app:srcCompat="@drawable/g902" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="130dp"
            app:srcCompat="@drawable/ic_call" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="130dp"
            app:srcCompat="@drawable/ic_alarm" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>